<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <ThingDef ParentName="ArtableFurnitureBase">
    <defName>Seat_AdvChair</defName>
    <label>advanced chair</label>
    <description>A high-end, spacer-era seating solution with adaptive cushioning, posture calibration, and breathable smart fabrics. Designed for maximum long-term comfort and sleek modern interiors.</description>
    <graphicData>
      <texPath>NewThings/Furniture/AdvancedChair</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(1,1)</drawSize>
      <damageData>
        <rectN>(0.25,0.234375,0.5,0.28125)</rectN>
        <rectS>(0.25,0.234375,0.5,0.28125)</rectS>
        <rectE>(0.28125,0.25,0.453125,0.25)</rectE>
        <rectW>(0.28125,0.25,0.453125,0.25)</rectW>
      </damageData>
      <shadowData>
        <volume>(0.23, 0.26, 0.23)</volume>
      </shadowData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <statBases>
      <MaxHitPoints>150</MaxHitPoints>
      <WorkToBuild>24000</WorkToBuild>
      <Mass>25</Mass>
      <Flammability>1.0</Flammability>
      <Beauty>10</Beauty>
      <Comfort>0.95</Comfort>
    </statBases>
    <socialPropernessMatters>true</socialPropernessMatters>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <costStuffCount>100</costStuffCount>
    <costList>
      <Steel>30</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
      <ComponentSpacer>1</ComponentSpacer>
    </costList>
    <pathCost>30</pathCost>
    <fillPercent>0.4</fillPercent>
    <defaultPlacingRot>South</defaultPlacingRot>
    <building>
      <isSittable>true</isSittable>
      <paintable>true</paintable>
    </building>
    <constructionSkillPrerequisite>7</constructionSkillPrerequisite>
    <researchPrerequisites>
      <li>SpacerFurniture</li>
    </researchPrerequisites>
    <designationCategory>Furniture</designationCategory>
  </ThingDef>

