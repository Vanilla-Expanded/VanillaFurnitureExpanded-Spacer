<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationReplace">
    <!-- There may be no mods using this research projects, so don't error if there's none. -->
    <success>Always</success>
    <!-- Replace any "MechaniteRestoration" research projects with normal "SpacerElectronics" project. -->
    <xpath>Defs/ThingDef/researchPrerequisites/li[text()="MechaniteRestoration"]</xpath>
    <value>
      <li>SpacerElectronics</li>
    </value>
  </Operation>
</Patch>